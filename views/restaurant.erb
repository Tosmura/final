<div class="row">
    <div class="col-sm-9">
      <h1><%= @restaurant[:title] %></h1>
        <p><%= @restaurant[:description] %></p>
        <% for rsvp in @rsvps %>
            <% user = @users_table.where(:id => rsvp[:user_id]).to_a[0] %>
            <div class="media">
                <% if rsvp[:going] %>
                    <i class="fas fa-thumbs-up fa-3x mr-3"></i>
                <% else %>
                    <i class="fas fa-thumbs-down fa-3x mr-3"></i>
                <% end %>
                <div class="media-body">
                    <h5 class="mt-0"><%= user[:name] %></h5>
                    <%= rsvp[:comments] %>
                </div>
            </div>
        <% end %>
        <p class="mt-5">
            <a href="/restaurants/<%= @restaurant[:id] %>/rsvps/new" class="btn btn-primary">RSVP now!</a>
        </p>
    </div>
    <div class="col-sm-3">

        <h3>Where?</h3>
        <p><%= @restaurant[:location] %></p>
        <h3>How many guests so far?</h3>
        <p><%= @count %></p>
    </div>
</div>